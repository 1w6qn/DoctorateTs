{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // 基准目录，通常是项目根目录
    "paths": {
      "@excel/*": [
        "app/excel/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@game/*":[
        "app/game/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/lib.dom.d.ts",
    "hook/main.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
 }
}